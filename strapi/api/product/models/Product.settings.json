{
  "connection": "default",
  "collectionName": "product",
  "info": {
    "name": "product",
    "description": "Content type for website products"
  },
  "options": {
    "timestamps": true
  },
  "attributes": {
    "name": {
      "default": "",
      "type": "string"
    },
    "seo": {
      "default": "",
      "type": "string"
    },
    "price": {
      "default": "",
      "type": "decimal"
    },
    "description": {
      "default": "",
      "type": "text"
    },
    "artwork": {
      "collection": "artwork",
      "via": "products"
    },
    "barebone": {
      "model": "barebone",
      "via": "product"
    },
    "imagecollections": {
      "collection": "imagecollection",
      "via": "product"
    }
  }
}